<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IttTune.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Image Source="logo_textune.png" SemanticProperties.Description ="ITT Tune Logo"
               HeightRequest="200"
               />

            <Label Text="Desarrollada por Saul Perez y Marcos X" SemanticProperties.HeadingLevel="Level1" VerticalOptions="Start"
               FontSize="15"  HorizontalOptions="Center" TextColor="Black"/>
            <Entry Placeholder="Usuario" x:Name="Usuario" Keyboard="Text" BackgroundColor="LightGrey" TextColor="Black" PlaceholderColor="Black" />
            <Entry Placeholder="Contraseña" x:Name="Contraseña" Keyboard="Text" BackgroundColor="LightGrey" TextColor="Black" PlaceholderColor="Black"
                  IsPassword="True" />
            <Button Text="Ingresar" Clicked="btnIngresar_Clicked" x:Name="Ingresar"/>
        </VerticalStackLayout>
    </ScrollView>


</ContentPage>
